<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_player_layout_magic_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/divider_horizontal_bright"
        />
    <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="3dip"
         android:layout_marginBottom="3dip"
         >
         <TextView
             android:id="@+id/music_player_title"
             android:layout_width="match_parent"
             android:layout_height="@dimen/toolbtn_height"
             android:layout_marginRight="1dip"
             android:layout_marginLeft="3dip"
             android:gravity="center_vertical"
             android:textSize="@dimen/title_text_size"
             android:textColor="@color/title_text_color_new"
             android:maxLines="2"
             android:ellipsize="end"
             />
         <LinearLayout
             android:id="@+id/music_player_control"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:weightSum="4"
             android:orientation="horizontal"
             android:visibility="gone"
             >
             <ImageView
                 android:id="@+id/music_player_btnvol"
                 android:layout_width="@dimen/toolbtn_width"
                 android:layout_height="@dimen/toolbtn_height"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:scaleType="fitCenter"
                 android:src="@drawable/ic_media_volume"
                 android:clickable="true"
                 />
             <ImageView
                 android:id="@+id/music_player_btnprev"
                 android:layout_width="@dimen/toolbtn_width"
                 android:layout_height="@dimen/toolbtn_height"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:scaleType="fitCenter"
                 android:src="@drawable/ic_media_prev"
                 android:clickable="true"
                 />
             <ImageView
                 android:id="@+id/music_player_btnplay"
                 android:layout_width="@dimen/toolbtn_width"
                 android:layout_height="@dimen/toolbtn_height"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:scaleType="fitCenter"
                 android:src="@drawable/ic_media_play"
                 android:clickable="true"
                 />
             <ImageView
                 android:id="@+id/music_player_btnnext"
                 android:layout_width="@dimen/toolbtn_width"
                 android:layout_height="@dimen/toolbtn_height"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:scaleType="fitCenter"
                 android:src="@drawable/ic_media_next"
                 android:clickable="true"
                 />
         </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/music_player_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/music_player_curpos"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/desc_text_size"
            android:textColor="@color/desc_text_color"
            />
        <SeekBar
            android:id="@+id/music_player_seekbar" 
            android:layout_width="0dip" 
            android:layout_height="22dip"
            android:layout_weight="1"
            android:progressDrawable="@drawable/progressbar"
            android:thumb="@drawable/seek_thumb"
            />
        <TextView
            android:id="@+id/music_player_maxpos"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/desc_text_size"
            android:textColor="@color/desc_text_color"
            />
        </LinearLayout>    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/divider_horizontal_bright"
        />
</LinearLayout>