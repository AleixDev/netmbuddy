<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_player_layout_magic_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/divider_horizontal_bright"
        />
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="300dip"
        />
    <TextView
        android:id="@+id/music_player_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbtn_height"
        android:layout_marginRight="2dip"
        android:layout_marginLeft="2dip"
        android:gravity="center_vertical"
        android:textSize="@dimen/desc_text_size"
        android:textColor="@color/title_text_color_new"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <MediaController
        android:id="@+id/music_player_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/music_player_progressbar" 
        android:layout_width="match_parent" 
        android:layout_height="3dip"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar"
        android:max="100"
        />    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/divider_horizontal_bright"
        />
</LinearLayout>