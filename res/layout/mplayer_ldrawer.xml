<?xml version="1.0" encoding="utf-8"?>
<SlidingDrawer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mplayer_ldrawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dip"
    android:handle="@+id/mplayer_ldrawer_handle"
    android:content="@+id/mplayer_ldrawer_content"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/mplayer_ldrawer_handle"
        android:layout_width="80dip"
        android:layout_height="35dip"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ldrawer_handle"
        android:background="@drawable/ldrawer_bg"
        android:clickable="true"
        />
    <LinearLayout
        android:id="@+id/mplayer_ldrawer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:scaleType="fitXY"
            android:src="@drawable/divider_horizontal_bright"
            />
        <include
            layout="@layout/mplayer_list" />
    </LinearLayout>
</SlidingDrawer>
