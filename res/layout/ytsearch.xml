<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/title"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large_text_size"
                android:textColor="@color/title_text_color_new"
                android:text="@string/new_search"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            >
            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/toolbtn"
                    android:layout_width="@dimen/toolbtn_width"
                    android:layout_height="@dimen/toolbtn_height"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/prev"
                android:layout_width="@dimen/toolbtn_width"
                android:layout_height="@dimen/toolbtn_height"
                android:layout_toRightOf="@id/toolbar"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@drawable/ic_prev"
                />
            <ImageView
                android:id="@+id/next"
                android:layout_width="@dimen/toolbtn_width"
                android:layout_height="@dimen/toolbtn_height"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@drawable/ic_next"
                />
            <HorizontalScrollView
                android:id="@+id/indexbar"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/toolbtn_height"
                android:layout_toRightOf="@id/prev"
                android:layout_toLeftOf="@id/next"
                android:fillViewport="true"
                >
                <LinearLayout
                    android:id="@+id/indexgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottombar"
            android:visibility="gone"
            >
            <include layout="@layout/music_player" />
        </LinearLayout>
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/topbar"
            android:layout_above="@id/player"
            />
        <LinearLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/player"
            android:visibility="gone"
            >
            <include layout="@layout/music_player_drawer" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/infolayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/infomsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/title_text_color_new"
            android:gravity="center"
            />        
        <ImageView
            android:id="@+id/infoimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:src="@drawable/spinner_large"
            android:scaleType="fitCenter"
            />
    </LinearLayout>        
</LinearLayout>